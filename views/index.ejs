<!DOCTYPE html>
<html lang="th">
<head>
  <title><%= title %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Custom -->
  <% if (DEPLOY == 'dev') { %>
  <link rel="stylesheet" href="/css/<%= fileName %>.css">
  <% }else{ %>
  <link rel="stylesheet" href="/css/<%= fileName %>.min.css">
  <% } %>

</head>
<body>
  <h3 class="mt-4">Access Testing</h3>
  
  <!-- MDB -->
  <div class="container mt-4">
    <form action="/get-mdb" method="post" class="mb-3">
      <div class="mb-3">
        <label for="jsFile" class="form-label">Get .mdb</label>
        <select name="jsFile" class="form-select">
          <% mdbFiles.forEach((file) => { %>
            <option value="<%= file.replace(/\.js$/, '') %>"><%= file %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>


  <!-- ACCDB -->
  <div class="container mt-4">
  <form action="/get-accdb" method="post" class="mb-3">
    <div class="mb-3">
      <label for="jsFile" class="form-label">Get .mdb</label>
      <select name="jsFile" class="form-select">
          <% accdbFiles.forEach((file) => { %>
          <option value="<%= file.replace(/\.js$/, '') %>"><%= file %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

  

  <!-- สำหรับโหลด JS -->
  <% if (DEPLOY == 'dev') { %>
    <script type="module" src="/js/<%= fileName %>.js?v=<%= time %>"></script>
  <% }else{ %>
    <% if (JS_USE == 'obfus') { %>      
      <script src="/js/<%= fileName %>.obf.js?v=<%= time %>"></script>  
    <% }else{ %>
      <script src="/js/<%= fileName %>.min.js?v=<%= time %>"></script>  
    <% } %>
  <% } %>
</body>
</html>

